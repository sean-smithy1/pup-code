[Unit]
<% if defined?(@description) -%>
Description=<%= @description %>
<% end -%>
<% if defined?(@after) -%>
After=<%= @after %>
<% end -%>
<% if @wants.any? -%>
Wants=<%= @wants.join(' ') %>
<% end -%>
<% if @after_units.any? -%>
After=<%= @after_units.join(' ') %>
<% end -%>
<% if @before_units.any? -%>
Before=<%= @before_units.join(' ') %>
<% end -%>
<% if @conflicts.any? -%>
Conflicts=<%= @conflicts.join(' ') %>
<% end -%>
<% if @requires.any? -%>
Requires=<%= @requires.join(' ') %>
<% end -%>
<% if @on_failure.any? -%>
OnFailure=<%= @on_failure.join(' ') %>
<% end -%>

[Service]
<% if defined?(@execstart) -%>
  <%- if defined?(@dropin) -%>
ExecStart=
  <%- end -%>
